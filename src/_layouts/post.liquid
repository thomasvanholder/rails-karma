---
layout: default
---

<div class="flex mx-auto mb-10 max-w-7xl">
  <div class="w-1/5 pt-8">
		<ul class="sticky flex flex-col w-full h-auto p-2 space-y-3 text-purple-700 bg-white border-4 border-gray-500 rounded-lg cursor-pointer top-16">
      {% for item in page.navigation %}
        {% assign item_regexed = item | replace: " ", "-"  | downcase | remove: "." %}
        <li>
          <a href="#{{ item_regexed }}" data-controller="scroll-to">{{item}}</a>
        <li>
      {% endfor %}
		</ul>
	</div>

<div markdown='1' class="w-4/5 max-w-2xl p-8 mx-auto">
  <article markdown='1' class="prose prose-md lg:prose-lg max-w-none">

  {{ content }}

  </article>
</div>
</div>
